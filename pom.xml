    </dependencies>

    <build>
        <finalName>${project.artifactId}_${maven.build.timestamp}</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${java.ver}</source>
                    <target>${java.ver}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <parallel>classes</parallel>
                    <forkMode>perthread</forkMode>
                    <threadCount>4</threadCount>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <warSourceExcludes>**.css, **.js</warSourceExcludes>
                    <warSourceIncludes>*static/css/**.min.css,*static/js/*.min.js,*static/fonts/*,*static/img/**,*view/**,**/dynamic/*,</warSourceIncludes>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    <archive>
                        <manifestEntries>
                            <Implementation-Build>${maven.build.timestamp}</Implementation-Build>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.4</version>
                <executions>
                    <execution>
                        <id>default-minify</id>
                        <phase>compile</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <!--<cssSourceDir>static/css/st</cssSourceDir>
                            <cssFinalFile>site.css</cssFinalFile>
                            <cssSourceIncludes>
                                <cssSourceInclude>bootstrap.css</cssSourceInclude>
                                <cssSourceInclude>font-awesome.css</cssSourceInclude>
                                <cssSourceInclude>loading-bar.css</cssSourceInclude>
                            </cssSourceIncludes>-->
                            <jsSourceDir>static/js</jsSourceDir>
                            <jsFinalFile>static.js</jsFinalFile>
                            <jsSourceFiles>
                                <jsSourceFile>jquery-2.2.1.js</jsSourceFile>
                                <jsSourceFile>bootstrap.js</jsSourceFile>
                                <jsSourceFile>angular.js</jsSourceFile>
                                <jsSourceFile>angular-ui-router.js</jsSourceFile>
                                <jsSourceFile>angular-animate.js</jsSourceFile>
                                <jsSourceFile>loading-bar.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsEngine>CLOSURE</jsEngine>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>app-main-minify</id>
                        <phase>compile</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <cssSourceDir>static/css</cssSourceDir>
                            <cssFinalFile>app_site.css</cssFinalFile>
                            <cssSourceIncludes>
                                <cssSourceInclude>theme/AdminLTE.css</cssSourceInclude>
                                <cssSourceInclude>theme/skin-blue-light.css</cssSourceInclude>
                            </cssSourceIncludes>
                            <jsSourceDir>static</jsSourceDir>
                            <jsFinalFile>js/app_site.js</jsFinalFile>
                            <jsSourceFiles>
                                <jsSourceFile>app/app.js</jsSourceFile>
                                <jsSourceFile>js/theme/app.js</jsSourceFile>
                                <jsSourceFile>js/theme/demo.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsEngine>CLOSURE</jsEngine>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>app-login-minify</id>
                        <phase>compile</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <cssSourceDir>static/css</cssSourceDir>
                            <cssFinalFile>app_login.css</cssFinalFile>
                            <cssSourceIncludes>
                                <cssSourceInclude>loginInit.css</cssSourceInclude>
                                <cssSourceInclude>parallax.css</cssSourceInclude>
                            </cssSourceIncludes>
                            <jsSourceDir>static</jsSourceDir>
                            <jsFinalFile>js/app_login.js</jsFinalFile>
                            <jsSourceFiles>
                                <jsSourceFile>js/parallax.js</jsSourceFile>

                                <jsSourceFile>app/appLog.js</jsSourceFile>
                                <jsSourceFile>app/user_controller.js</jsSourceFile>
                                <jsSourceFile>app/user_service.js</jsSourceFile>
                                <jsSourceFile>app/route-login.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsEngine>CLOSURE</jsEngine>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <prefix>git</prefix>
                    <dateFormat>dd.MM.yyyy</dateFormat>
                    <verbose>true</verbose>
                    <dotGitDirectory>${project.basedir}/.git</dotGitDirectory>
                    <skipPoms>true</skipPoms>
                    <generateGitPropertiesFile>true</generateGitPropertiesFile>
                    <generateGitPropertiesFilename>src/main/resources/git.properties</generateGitPropertiesFilename>
                    <failOnNoGitDirectory>false</failOnNoGitDirectory>
                    <gitDescribe>
                        <skip>false</skip>
                        <always>false</always>
                        <abbrev>7</abbrev>
                        <dirty>-dirty</dirty>
                        <forceLongFormat>false</forceLongFormat>
                    </gitDescribe>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
